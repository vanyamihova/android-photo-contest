<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/image_view_preview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/text_title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_below="@id/image_view_preview">

            <TextView
                android:id="@+id/text_counters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/colorLightGrey"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/image_view_arrow_up"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerInside"
                android:src="@drawable/button_vote_up"
                android:layout_below="@id/text_counters"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/image_view_arrow_down"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/button_vote_down"
                android:layout_alignTop="@id/image_view_arrow_up"
                android:layout_alignBottom="@id/image_view_arrow_up"
                android:layout_toRightOf="@id/image_view_arrow_up"/>

            <ImageView
                android:id="@+id/image_view_comments"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_comments"
                android:layout_alignTop="@id/image_view_arrow_up"
                android:layout_alignBottom="@id/image_view_arrow_up"
                android:layout_toRightOf="@id/image_view_arrow_down"/>

            <ImageView
                android:id="@+id/image_view_more"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_more"
                android:layout_alignTop="@id/image_view_arrow_up"
                android:layout_alignBottom="@id/image_view_arrow_up"
                android:layout_toRightOf="@id/image_view_comments"/>


            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_background_share"
                android:gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="Share"
                android:layout_alignTop="@id/image_view_arrow_up"
                android:layout_alignBottom="@id/image_view_arrow_up"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>